<style>
    overlay {
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        background: rgba(0,0,0,.7);
    }

    .overlay__wrapper {
        width: 100%;
        height: 100%;
        position: relative;
        text-align: center;
    }

    .overlay__spinner {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
    }

    .spinner-border {
        width: 5rem;
        height: 5rem;
    }

    .swal2-container {
        z-index: 9999;
    }

    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg)
        }

        100% {
            transform: rotate(360deg)
        }
    }

    .file-input-zone {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: transparent;
        color: black;
        cursor: pointer;
        position: relative;
        width: 63px;
        height: 58px;
        background-image: url(https://cdn-icons-png.flaticon.com/512/1091/1091916.png);
        background-repeat: no-repeat;
        background-size: 60px 58px;
        margin-top: 5px;
    }
    

    .file-input-zone input[type=file] {
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
    }
</style>

